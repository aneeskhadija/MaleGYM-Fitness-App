<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:res-auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    res-auto:cardBackgroundColor="@android:color/white"
    res-auto:cardCornerRadius="2dp"
    res-auto:cardElevation="4dp"
    android:layout_margin="7dp"
    res-auto:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="@dimen/card_margin"
        android:paddingBottom="@dimen/card_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/overflow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_dots" />

        <androidx.cardview.widget.CardView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginLeft="@dimen/card_8dp"
            res-auto:cardBackgroundColor="@color/white"
            res-auto:cardCornerRadius="36dp">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/thumbnail"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitCenter" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_10dp">

            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#ff2c3e50"
                android:ellipsize="end"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="11dp"
                android:textStyle="italic"
                android:textColor="#ff7f8c8d"
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_margin" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
